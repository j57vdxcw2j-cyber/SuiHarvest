rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - anyone can read, authenticated users can write their own data
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Game sessions collection - anyone can read, authenticated users can create/update
    match /gameSessions/{sessionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false; // Prevent deletion
    }
    
    // Game contracts collection - anyone can read
    match /gameContracts/{contractId} {
      allow read: if true;
      allow write: if false; // Only backend should write contracts
    }
    
    // Admin logs collection - only admins can read/write
    match /adminLogs/{logId} {
      allow read, write: if false; // Only backend
    }
    
    // Activities collection - users can read their own activities
    match /activities/{activityId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // Admin accounts collection
    match /admin_accounts/{accountId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Transactions collection - anyone can read
    match /transactions/{transactionId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
  }
}
